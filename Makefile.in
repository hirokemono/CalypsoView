#
#  Makefile for Kemo's Dynamo toolkit
#    Written by H. Matsui
#
SHELL           = @SHELL@
#
#  directories of Kemo's Dynamo toolkit
#
SRCDIR = @abs_top_srcdir@
INSTDIR= @prefix@
#
MHDDIR = $(SRCDIR)/src
MAKEDIR= $(SRCDIR)/work
BUILDDIR= $(SRCDIR)/bin

#
# MPI settings
#
MPICHDIR =    @MPIDIR@
MPICHLIBDIR = $(MPICHDIR)/lib
MPICHBINDIR = $(MPICHDIR)/bin
MPICHINCDIR = @MPIINCDIR@
MPILIBS =     @MPILIBS@
#
#    compilers
#
F90 = @FC@
CC =  @CC@
CXX = @CXX@

F90_LOCAL = $(F90)

MPIF90 = @MPIFC@
MPICC =  @MPICC@

GMAKE =  @GMAKE@
AR =     @ar_bin@
RANLIB = @RANLIB@

#
# COCOA_FLAG is defined to use cocoa Framework
#
COCOA_FLAG =     @COCOA_FLAG@
#
#  optimization
#
F90OPTFLAGS= @FCFLAGS@
OPTFLAGS =   @CFLAGS@
CXXFLAGS =   @CXXFLAGS@
DEPFLAGS= -MM -w -DDEPENDENCY_CHECK
#
#   libpng and zlib settings
#
ZLIB_CFLAGS = @ZLIB_CFLAGS@
ZLIB_LIBS =   @ZLIB_LIBS@
PNG_CFLAGS =  @PNG_CFLAGS@
PNG_LIBS =    @PNG_LIBS@
#
#   X window settings
#
X_CFLAGS = @X_CFLAGS@
X_LIBS= @X_LIBS@ -lm
#
#   OpenGL settings (Requirement: OpenGL, libpng)
#
OPENGL_INC = @GL_INC@
OPENGL_LIBS= @GL_LIBS@
#
#   GTK+ settings (Requirement: OpenGL, libpng)
GTK3_CFLAGS= @GTK3_CFLAGS@
GTK3_LIBS= @GTK3_LIBS@
#
#   GLFW settings (Requirement: OpenGL, libpng)
GLFW_CFLAGS= @GLFW_CFLAGS@
GLFW_LIBS=   @GLFW_LIBS@
#
#  --- Please do not chenge the following ---
#

all: makemake
	cd $(MAKEDIR); $(GMAKE)

depends:
	@echo "# Construct dependencies"; \
	cd $(MHDDIR) ; \
		$(GMAKE) \
		GMAKE="$(GMAKE)" \
		SRCDIR="$(SRCDIR)" \
		INSTDIR="$(INSTDIR)" \
		MAKEDIR="$(MAKEDIR)" \
		BUILDDIR="$(BUILDDIR)" \
		MHDDIR="$(MHDDIR)" \
		ZLIB_CFLAGS="$(ZLIB_CFLAGS)" \
		ZLIB_LIBS="$(ZLIB_LIBS)"     \
		PNG_CFLAGS="$(PNG_CFLAGS)"   \
		PNG_LIBS="$(PNG_LIBS)"       \
		X_LIBS="$(X_LIBS)" \
		X_CFLAGS="$(X_CFLAGS)" \
		OPENGL_INC="$(OPENGL_INC)" \
		OPENGL_LIBS="$(OPENGL_LIBS)" \
		GTK3_CFLAGS="$(GTK3_CFLAGS)" \
		GTK3_LIBS="$(GTK3_LIBS)" \
		COCOA_FLAG="$(COCOA_FLAG)" \
		OPTFLAGS="$(OPTFLAGS)" \
		CXXFLAGS="$(CXXFLAGS)" \
		DEPFLAGS="$(DEPFLAGS)" \
		F90LIB="$(F90LIB)" \
		F90_LOCAL="$(F90_LOCAL)" \
		CC="$(CC)" \
		CXX="$(CXX)" \
		MPIF90="$(MPIF90)" \
		depends

makemake:
	@echo "# Construct Makefile"; \
	cd $(MHDDIR) ; \
		$(GMAKE) \
		GMAKE="$(GMAKE)" \
		SRCDIR="$(SRCDIR)" \
		INSTDIR="$(INSTDIR)" \
		MAKEDIR="$(MAKEDIR)" \
		BUILDDIR="$(BUILDDIR)" \
		MHDDIR="$(MHDDIR)" \
		MPICHDIR="$(MPICHDIR)" \
		MPICHLIBDIR="$(MPICHLIBDIR)" \
		MPILIBS="$(MPILIBS)" \
		MPICHBINDIR="$(MPICHBINDIR)" \
		MPICHINCDIR="$(MPICHINCDIR)" \
		ZLIB_CFLAGS="$(ZLIB_CFLAGS)" \
		ZLIB_LIBS="$(ZLIB_LIBS)"     \
		PNG_CFLAGS="$(PNG_CFLAGS)"   \
		PNG_LIBS="$(PNG_LIBS)"       \
		X_LIBS="$(X_LIBS)" \
		X_CFLAGS="$(X_CFLAGS)" \
		OPENGL_INC="$(OPENGL_INC)" \
		OPENGL_LIBS="$(OPENGL_LIBS)" \
		GTK3_CFLAGS="$(GTK3_CFLAGS)" \
		GTK3_LIBS="$(GTK3_LIBS)" \
		GLFW_CFLAGS="$(GLFW_CFLAGS)" \
		GLFW_LIBS="$(GLFW_LIBS)" \
		COCOA_FLAG="$(COCOA_FLAG)" \
		OPTFLAGS="$(OPTFLAGS)" \
		CXXFLAGS="$(CXXFLAGS)" \
		DEPFLAGS="$(DEPFLAGS)" \
		F90LIB="$(F90LIB)" \
		F90_LOCAL="$(F90_LOCAL)" \
		CC="$(CC)" \
		CXX="$(CXX)" \
		MPIF90="$(MPIF90)" \
		MPICC="$(MPICC)"   \
		AR="$(AR)" \
		RANLIB="$(RANLIB)" \
		makemake


install:
	cd $(MAKEDIR) ; \
		$(GMAKE) install

clean:
	for dir in $(MAKEDIR) $(MHDDIR) ; do \
	echo "# cleaning $${dir} directory..."; \
		( cd $${dir}; \
		$(GMAKE) clean )\
	done; \
	rm -f mpif.h *.o *.mod *~ *.par *.diag *.a *.f90

distclean:
	echo "# Back to initial package"; \
	rm -fr $(MAKEDIR) $(BUILDDIR) Makefile config.log
